<h1 class="text-center mb-3">{{ title }}</h1>

<form action="/api/children" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="age">Age</label>
        <input type="text" name="age" class="form-control">
    </div>
    <input type="submit" value="Add Child" class="btn btn-primary btn-block">
</form>

<h4>Children</h4>
<ul class="list-group">
    {{#each children}}
        <li class="list-group-item">{{this.name}}: {{this.age}}</li>
    {{/each}}
</ul>

<a href="/api/children" class="btn btn-light mt-4">Visit API</a>